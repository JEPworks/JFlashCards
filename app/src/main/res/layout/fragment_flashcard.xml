<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment"
    >
    <beginnerjapaneseflashcards.jepworks.com.jflashcards.AnimatingRelativeLayout
        android:id="@+id/englishTextContainer"
        android:layout_width="match_parent"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/englishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_margin="12dp"
            android:gravity="center"
            android:textSize="38sp"
            android:layout_gravity="center_horizontal" />



    </beginnerjapaneseflashcards.jepworks.com.jflashcards.AnimatingRelativeLayout>

    <beginnerjapaneseflashcards.jepworks.com.jflashcards.AnimatingRelativeLayout
        android:id="@+id/japaneseCharacterContainer"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/japaneseCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/hiragana_a"
            />

        <TextView
            android:id="@+id/romajiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="12dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text=""
            android:textSize="38sp"
            android:layout_gravity="center_horizontal" />


    </beginnerjapaneseflashcards.jepworks.com.jflashcards.AnimatingRelativeLayout>



</RelativeLayout>